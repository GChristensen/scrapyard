{
    "manifest_version": 2,
    "name": "Scrapyard",
    "version": "0.0.1",
    "description": "__MSG_extensionDescription__",
    "default_locale": "en",
    "icons": {
	"64": "icons/scrapyard.svg"
    },
    "content_security_policy": "script-src 'self'; object-src 'self'; navigation-to 'filesystem:'",
    "permissions": [
        "activeTab",
        "bookmarks",
        "contextMenus",
        "downloads",
        "file:///*",
        "http://*/*",
        "https://*/*",
        "menus",
        "nativeMessaging",
        "notifications",
        "storage",
        "tabs",
        "unlimitedStorage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking"
    ],
    "applications": {
        "gecko": {
            "id": "scrapyard@firefox",
            "strict_min_version": "60.0"
        }
    },
    "sidebar_action": {
        "default_title": "Scrapyard",
        "default_panel": "main.html",
        "default_icon": "icons/scrapyard.svg"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
	"default_icon": {
	    "32": "icons/scrapyard.svg"
	}
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "content_script.css"
            ],
            "js": [
                "libs/jquery-3.3.1.js",
                "libs/md5.js",
                "proto.js",
                "marker.js",
                "message.js",
                "content_script.js"
            ]
        }
    ],
    "options_ui": {
        "open_in_tab": true,
        "page": "options.html"
    }
}
